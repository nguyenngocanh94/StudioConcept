<UserControl x:Class="StudioConcept.ActionItem.SequenceAction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cvt="clr-namespace:StudioConcept.Converter"
             mc:Ignorable="d" >
    <UserControl.Resources>
        <cvt:ColorToBrushConverter x:Key="stringToBrushConverter"/>
    </UserControl.Resources>
    <Canvas>
        <Path Data="{Binding Data}" Fill="{Binding Color, Converter={StaticResource stringToBrushConverter}}"/>
        <TextBlock Text="DCMM" Foreground="White"></TextBlock>
    </Canvas>
</UserControl>
