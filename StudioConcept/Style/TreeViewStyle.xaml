<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:item="clr-namespace:StudioConcept.ActionItem"
                    xmlns:converter="clr-namespace:StudioConcept.Converter">

    <Style x:Key="IfShapeStyle" TargetType="TreeViewItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TreeViewItem">
                    <Canvas>
                        <Canvas.Resources>
                            <converter:ChildrenPositionConverter x:Key="childrenPositionCvt"/>
                        </Canvas.Resources>
                        <item:SequenceAction x:Name="PART_Header"></item:SequenceAction>
                        <ItemsPresenter Canvas.Left="{Binding Left, Converter={DynamicResource childrenPositionCvt}, ConverterParameter=0}" Canvas.Top="{Binding Top, Converter={DynamicResource childrenPositionCvt}, ConverterParameter=1}" />
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel IsItemsHost="True"></StackPanel>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>