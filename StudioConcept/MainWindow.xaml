<Window x:Class="StudioConcept.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mvvm="clr-namespace:StudioConcept.MVVM"
        xmlns:action="clr-namespace:StudioConcept.ActionItem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1200">
    <Window.Resources>
        <DataTemplate DataType="{x:Type mvvm:BaseShape}">
            <action:SequenceAction AllowDrop="True" >
                <action:SequenceAction.Style>
                    <Style TargetType="action:SequenceAction">
                        <Setter Property="Canvas.Left" Value="{Binding X}"></Setter>
                        <Setter Property="Canvas.Top" Value="{Binding Y}"></Setter>
                    </Style>
                </action:SequenceAction.Style>
            </action:SequenceAction>
        </DataTemplate>
    </Window.Resources>
    <Window.DataContext>
        <mvvm:MainWindowMVVM />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="7*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ItemsControl ItemsSource="{Binding Shapes}">
        </ItemsControl>
        <Canvas Grid.Column="1" Background="LightGray">
            
        </Canvas>
    </Grid>
</Window>
